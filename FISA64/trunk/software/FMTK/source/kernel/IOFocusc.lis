   171	void ForceIOFocus(JCB *j)
   172	{
   173	    RequestIOFocus(j);   // In case it isn't requested yet.
   174	    LockIOF();
   175	        if (j != IOFocusNdx) {
   176	            CopyScreenToVirtualScreen();
   177	            j->pVidMem = j->pVirtVidMem;
   178	            IOFocusNdx = j;
   179	            j->pVidMem = 0xFFD00000;
   180	            CopyVirtualScreenToScreen();
   181	        }
   182	    UnlockIOF();
   183	}
