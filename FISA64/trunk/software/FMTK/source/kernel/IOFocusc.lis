   256	void ForceReleaseIOFocus(JCB * j)
   257	{
   258	     JCB *p;
   259	     
   260	     LockIOF();
   261	         if (IOFocusTbl[0] & (1 << (int)j->number)) {
   262	             IOFocusTbl[0] &= ~(1 << j->number);
   263	             if (j == IOFocusNdx)
   264	                SwitchIOFocus();
   265	             p = j->iof_next;
   266	             if (p) {
   267	                  if (p <> j) {
   268	                        p->iof_prev = j->iof_prev;
   269	                        j->iof_prev->iof_next = p;
   270	                  } 
   271	                  else {
   272	                       IOFocusNdx = null;
   273	                  }
   274	                  j->iof_next = null;
   275	                  j->iof_prev = null;
   276	             }
   277	         }
   278	     UnlockIOF();
   279	}
