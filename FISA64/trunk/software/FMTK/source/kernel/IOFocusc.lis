   216	void RequestIOFocus(JCB *j)
   217	{
   218	     int nj;
   219	     int stat;
   220	
   221	     nj = j->number;
   222	     LockIOF();
   223	        stat = (IOFocusTbl[0] >> nj) & 1;
   224	        if (!stat) {
   225	           if (IOFocusNdx==null) {
   226	               IOFocusNdx = j;
   227	               j->iof_next = j;
   228	               j->iof_prev = j;
   229	           }
   230	           else {
   231	               j->iof_prev = IOFocusNdx->iof_prev;
   232	               j->iof_next = IOFocusNdx;
   233	               IOFocusNdx->iof_prev->iof_next = j;
   234	               IOFocusNdx->iof_prev = j;
   235	           }
   236	           IOFocusTbl[0] |= (1 << nj);
   237	        }
   238	     UnlockIOF();
   239	}
