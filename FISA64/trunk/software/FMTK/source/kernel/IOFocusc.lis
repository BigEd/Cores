   200	                     j->pVidMem = j->pVirtVidMem;
   201	                     IOFocusNdx = p;
   202	                     p->pVidMem = 0xFFD00000;
   203	                     CopyVirtualScreenToScreen();
   204	                 }
   205	             }
   206	         }
   207	     UnlockIOF();
   208	}
